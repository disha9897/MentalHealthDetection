<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Solution">


    <TextView
        android:id="@+id/textView8"
        android:layout_width="64dp"
        android:layout_height="25dp"
        android:layout_marginTop="32dp"
        android:text="Solution"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textColorHint="#070707"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="359dp"
        android:layout_height="93dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:textAlignment="center"
        android:text="  1- Talking about your feelings can help you stay in good mental health and deal with times when you feel troubled. Talking about your feelings isn’t a sign of weakness. It’s part of taking charge of your well being and doing what you can to stay healthy."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        android:gravity="center_horizontal" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="127dp"
        android:layout_height="138dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="193dp"
        android:layout_marginBottom="308dp"
        app:layout_constraintBottom_toTopOf="@+id/textView13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/friends"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="180dp"
        android:layout_height="108dp"
        android:layout_marginTop="106dp"
        android:layout_marginBottom="106dp"
        android:textAlignment="center"
        android:text="2- Accept who you are. Don't compare yourself. You are best among all because feeling good about yourself boosts your confidence to learn new skills."
        app:layout_constraintBottom_toTopOf="@+id/textView16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.897"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        app:layout_constraintVertical_bias="0.472" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="347dp"
        android:layout_height="86dp"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:text=" 3- Do something you are good at. It is the best way to achieve the state of flow. Also being bust make you stay from horrible thoughts and you can achieve the state of thoughtless awareness state."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="140dp"
        android:layout_height="110dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="19dp"
        app:layout_constraintBottom_toTopOf="@+id/textView13"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/textView16"
        app:layout_constraintVertical_bias="0.625"
        app:srcCompat="@drawable/meditaion" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="188dp"
        android:layout_height="115dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="146dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="146dp"
        android:textAlignment="center"
        android:text="4- Meditation is the greatest medicine.  Meditation is especially beneficial for reducing stress. It can also reduce depression and anxiety, and help people manage chronic pain."
        app:layout_constraintBottom_toBottomOf="@+id/textView13"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.254" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="361dp"
        android:layout_height="69dp"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="16dp"
        android:textAlignment="center"
        android:text="5- Keep Active. Experts believe exercise releases chemicals in your brain that make you feel good. Regular exercise can boost your self-esteem and help you concentrate, sleep and feel better."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

</androidx.constraintlayout.widget.ConstraintLayout>